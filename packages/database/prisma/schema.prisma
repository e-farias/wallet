datasource db {
  provider = "postgres"
  url      = env("DB_POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

enum TransactionStatus {
  PENDING
  COMPLETED
  FAILED
  REVERSED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  wallet               Wallet?
  sentTransactions     Transaction[] @relation("Sender")
  receivedTransactions Transaction[] @relation("Receiver")
  deposits             Deposit[]

  @@index([id])
  @@index([email])
}

model Wallet {
  id        String   @id @default(uuid())
  userId    String   @unique
  balance   Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Transaction {
  id                    String            @id @default(uuid())
  senderUserId          String
  receiverUserId        String
  amount                Int
  status                TransactionStatus @default(PENDING)
  description           String?
  originalTransactionId String?

  sender              User          @relation("Sender", fields: [senderUserId], references: [id])
  receiver            User          @relation("Receiver", fields: [receiverUserId], references: [id])
  originalTransaction Transaction?  @relation("ReversalRelation", fields: [originalTransactionId], references: [id])
  reversals           Transaction[] @relation("ReversalRelation")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([senderUserId])
  @@index([receiverUserId])
  @@index([status])
}

model Deposit {
  id     String            @id @default(uuid())
  userId String
  amount Int
  status TransactionStatus @default(PENDING)

  user User @relation(fields: [userId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([id])
  @@index([userId])
  @@index([status])
}
