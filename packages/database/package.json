{
  "name": "@repo/database",
  "version": "1.0.0",
  "exports": {
    ".": {
      "import": "./dist/client.js",
      "require": "./dist/client.js",
      "types": "./src/client.ts"
    }
  },
  "scripts": {
    "db:update": "dotenv -e ../../.env -- prisma db push && pnpm run db:build",
    "db:studio": "dotenv -e ../../.env -- prisma studio",
    "db:reset": "dotenv -e ../../.env -- pnpm run db:update --force-reset",
    "query": "npx ts-node --compiler-options {'\"module\":\"CommonJS\"'} src/query.ts",
    "format": "prisma format",
    "generate": "prisma generate",
    "lint": "eslint . --max-warnings 0",
    "db:build": "tsup src/*",
    "predb:build": "pnpm run generate"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "dotenv": "^16.1.4"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "eslint": "^8.57.0",
    "prisma": "^6.6.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.2",
    "tsx": "4.19.1",
    "typescript": "5.5.4",
    "ts-node": "10.9.2",
    "dotenv-cli": "^8.0.0"
  }
}
