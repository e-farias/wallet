{
  "name": "wallet",
  "private": true,
  "scripts": {
    "build": "dotenv -e .env turbo run build",
    "build:packages": "dotenv -e .env turbo run build:packages",
    "dev": "pnpm build:packages && dotenv -e .env turbo run dev",
    "dev:api": "dotenv -e .env turbo run dev --filter=api",
    "dev:web": "dotenv -e .env turbo run dev --filter=web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "docker:build": "docker-compose build --no-cache",
    "docker:up": "pnpm docker:build && docker-compose up -dV",
    "docker:down": "docker-compose down --rmi all",
    "del:builds": "find . -type d -name 'dist' -prune -exec rm -rf '{}' +",
    "del:libs": "find . -type d -name 'node_modules' -prune -exec rm -rf '{}' +",
    "del": "pnpm del:builds && pnpm del:libs"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.5.3",
    "tsx": "4.19.1",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@10.10.0",
  "engines": {
    "node": ">=18"
  }
}
