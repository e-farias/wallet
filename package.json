{
  "name": "wallet",
  "private": true,
  "scripts": {
    "build": "dotenv -e .env turbo run build",
    "dev": "dotenv -e .env turbo run dev",
    "dev:api": "dotenv -e .env turbo run dev --filter=api",
    "dev:web": "dotenv -e .env turbo run dev --filter=web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "docker:build": "docker-compose build --no-cache",
    "docker:up": "pnpm docker:build && docker-compose up -dV",
    "docker:down": "docker-compose down --rmi all"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "tsx": "4.19.1",
    "turbo": "^2.5.2",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
